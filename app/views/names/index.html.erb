<h1>姓名の一覧</h1>

<%= link_to '追加', new_name_path %>

<%= link_to '取り込み', :controller => 'names', :action => :absorb %>

<%= link_to '書き出し', :controller => 'names', :action => :export %>

<%= link_to '読み込み', :controller => 'names', :action => :import %>

<%= link_to '全て削除', :controller => 'names', :action => :delete_all %>

<table class="names" >
  <tr>
    <th>姓</th>
    <th>名</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @names.each do |name| %>
  <tr>
    <td><%= name.sei %></td>
    <td><%= name.mei %></td>
    <td class="link" ><%= link_to '表示', name %></td>
    <td class="link" ><%= link_to '編集', edit_name_path(name) %></td>
    <td class="link" ><%= link_to '削除', name, confirm: '本当に削除してよろしいですか？', method: :delete %></td>
  </tr>
<% end %>
</table>

